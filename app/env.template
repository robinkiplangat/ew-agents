# ElectionWatch API Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Server Configuration
PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL DATABASE SETTINGS
# =============================================================================

# MongoDB Atlas (Cloud Database)
# Get from: https://cloud.mongodb.com/
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_ATLAS_URI=

# Neo4j Database (Graph Database)
# Local: bolt://localhost:7687
# Cloud: bolt://your-neo4j-instance.databases.neo4j.io:7687
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Redis (Caching - Optional)
REDIS_URL=redis://localhost:6379

# =============================================================================
# GOOGLE CLOUD SETTINGS (OPTIONAL)
# =============================================================================

# Google Cloud Project (for enhanced features)
GOOGLE_CLOUD_PROJECT=

# Google Cloud Location
GOOGLE_CLOUD_LOCATION=us-central1

# =============================================================================
# SECURITY SETTINGS (PRODUCTION)
# =============================================================================

# JWT Secret (for authentication - if implemented)
# JWT_SECRET=your-super-secret-key-here

# API Rate Limiting (requests per minute)
# RATE_LIMIT=60

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# EXTERNAL API KEYS (IF USED)
# =============================================================================

# OpenAI API Key (if using OpenAI models)
# OPENAI_API_KEY=sk-...

# Anthropic API Key (if using Claude models)
# ANTHROPIC_API_KEY=sk-...

# Twitter API Keys (if monitoring Twitter)
# TWITTER_BEARER_TOKEN=
# TWITTER_API_KEY=
# TWITTER_API_SECRET=

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================

# For Heroku
# HEROKU_APP_NAME=your-app-name

# For Railway
# RAILWAY_STATIC_URL=

# For Render
# RENDER_EXTERNAL_URL=

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (development only)
DEBUG=false

# Database connection timeout
DB_TIMEOUT=30

# Request timeout (seconds)
REQUEST_TIMEOUT=30 